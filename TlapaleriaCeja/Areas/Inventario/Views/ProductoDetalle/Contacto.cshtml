	ViewData["Title"] = "Contacto";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- FIRST AREA START -->
<div class="text-left mt-3">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li>
                                <a style="text-decoration: none" asp-area="" asp-controller="Home" asp-action="Index">
                                    <span class="text-dark">
                                        Inicio
                                    </span>
                                </a>
                            </li>
                            <li>
                                <span class="ltn__secondary-color">
                                    Contáctanos
                                </span>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="mt-5" >
                    <div class="page-title">
                        <h1>CONTÁCTANOS</h1>
                    </div>
                    <div>
                        <h5 class=>
                            ¿Tienes alguna duda o comentario? Estamos aquí para ayudarte. No dudes en ponerte en contacto con nosotros a través de cualquiera de los siguientes métodos:
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- FIRST AREA ENDS -->


<!-- START MAIN CONTENT -->
<div class="main_content">

    <!-- START SECTION CONTACT -->
    <div class="section" style="padding:80px 0; position: relative">
	    <div class="container">
            <div class="row">
                <div class="col-xl-4 col-md-6">
            	    <div class="contact_wrap contact_style3">
                        <div class="contact_icon">
                            <i class="bi bi-geo-alt"></i>
                        </div>
                        <div class="contact_text">
                            <span>Dirección</span>
                            <p>Ignacio Allende 5, Emiliano Zapata, Michoacán</p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-md-6">
            	    <div class="contact_wrap contact_style3">
                        <div class="contact_icon">
                            <i class="bi bi-envelope"></i>
                        </div>
                        <div class="contact_text">
                            <span>Correo</span>
                            <a href="mailto:tlapaleriaceja@gmail.com">
                                tlapaleriaceja@gmail.com
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-md-6">
            	    <div class="contact_wrap contact_style3">
                        <div class="contact_icon">
                            <i class="bi bi-phone"></i>
                        </div>
                        <div class="contact_text">
                            <span>Teléfono</span>
                            <p>+ 52 353 105 0793</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END SECTION CONTACT -->

    <!-- START SECTION CONTACT -->
    <div class="section pt-0">
	    <div class="container">
    	    <div class="row">
        	    <div class="col-lg-6">
            	    <div class="heading_s1">
                	    <h4 class="title-2">Habla con nosotros</h4>
                    </div>
                    <p class="contact-text leads">También puedes completar el siguiente formulario y nos pondremos en contacto contigo lo antes posible. ¡Esperamos tener noticias tuyas pronto!</p>
                    <div class="field_form">
                        <form method="post" name="enq">
                            <div class="row">
                                <div class="form-group col-md-6 mb-3">
                                    <input required="" placeholder="Tu nombre *" id="first-name" class="form-control" name="name" type="text">
                                 </div>
                                <div class="form-group col-md-6 mb-3">
                                    <input required="" placeholder="Tu Correo *" id="email" class="form-control" name="email" type="email">
                                </div>
                                <div class="form-group col-md-6 mb-3">
                                    <input required="" placeholder="Tu Número de Teléfono. *" id="phone" class="form-control" name="phone" type="number">
                                </div>
                                <div class="form-group col-md-6 mb-3">
                                    <input placeholder="Tema de discución" id="subject" class="form-control" name="subject" type="text">
                                </div>
                                <div class="form-group col-md-12 mb-3">
                                    <textarea required="" placeholder="Mensaje *" id="description" class="form-control" name="message" rows="4"></textarea>
                                </div>
                                <div class="col-md-12 mb-3">
                                    <button type="submit" title="Submit Your Message!" class="btn btn-fill-out" id="submitButton" name="submit" value="Submit">Enviar Mensaje</button>
                                </div>
                                <div class="col-md-12 mb-3">
                                    <div id="alert-msg" class="alert-msg text-center"></div>
                                </div>
                            </div>
                        </form>		
                    </div>
                </div>
                <div class="col-lg-6 pt-2 pt-lg-0 mt-4 mt-lg-0">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1874.6754160151468!2d-102.61645399370174!3d19.993785033835664!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x842ef154b892e7a5%3A0xb8f0b2facc5e2e92!2sTLAPALERIA%20CEJA!5e0!3m2!1ses-419!2smx!4v1713498671842!5m2!1ses-419!2smx" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
    <!-- END SECTION CONTACT -->

</div>
<!-- END MAIN CONTENT -->

